{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "reporters": [
    "default",
    ["jest-html-reporters", {
      "publicPath": "./test-report/e2e",
      "filename": "index.html",
      "openReport": false,
      "pageTitle": "MaraMap E2E Test Report"
    }],
    ["jest-junit", {
      "outputDirectory": "./test-results/e2e",
      "outputName": "junit.xml",
      "classNameTemplate": "{classname}",
      "titleTemplate": "{title}"
    }]
  ]
}
